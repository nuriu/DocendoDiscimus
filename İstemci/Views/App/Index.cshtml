<script type="text/javascript">
    $(document).ready(function () {
        $('input#kullanici_adi, input#parola').characterCounter();
    });
    function temizle() {
        $(':input').removeAttr('checked').removeAttr('selected').not(':button, :submit, :reset, :hidden, :radio, :checkbox').val('').blur();
    }
</script>